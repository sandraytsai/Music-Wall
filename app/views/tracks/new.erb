<h1>Post a Song</h1>
<hr/>

<% if @track && @track.errors.any? %>
  <div>
    <strong>Some issues with your track, please fix them:</strong>
    <ul>
      <% @track.errors.full_messages.each do |message| %> 
        <li><%= message %></li>
      <% end %> 
    </ul>
  </div>
<% end %> 


<form method="post" action="/tracks">
  <div>
    <label>Author:</label>
    <input type="text" name="author" value="<%= @track && @track.author %>">
  </div>
  <div>
    <label>Title:</label>
    <input type="text" name="title" value="<%= @track && @track.title %>">
  </div>
  <div>
    <label>URL (if available):</label>
    <input type="text" name="url" value="<%= @track && @track.url %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>


